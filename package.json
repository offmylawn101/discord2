{
  "name": "discord2",
  "version": "2.0.0",
  "description": "Full-stack Discord clone - scalable with PostgreSQL, Redis, S3",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "node server/index.js",
    "dev:all": "concurrently \"node server/index.js\" \"cd client && npx vite\"",
    "client": "cd client && npx vite",
    "build": "cd client && npx vite build",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop discord2",
    "pm2:restart": "pm2 restart discord2",
    "pm2:logs": "pm2 logs discord2",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.700.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.6",
    "dotenv": "^17.2.4",
    "express": "^5.2.1",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "pg": "^8.13.0",
    "socket.io": "^4.8.3",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.0"
  }
}
